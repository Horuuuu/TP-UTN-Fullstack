<div class="container" style=" margin :100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Editar la Novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
            <input type="hidden" value="{{novedad.id}}" name="id">

            <div class="form-group">
                <label>Titulo</label>
                <input type="text" class="form-control" name="titulo" value={{novedad.titulo}}>
            </div>
            <div class="form-group">
                <label>Subtitulo</label>
                <textarea name="subtitulo" class="form-control">{{novedad.subtitulo}}</textarea> 
            </div>
            <div class="form-group">
                <label>Contenido</label>
                <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}}</textarea> 
            </div>
            <button type="submit" class="btn btn-primary">Editar</button>
            </form>
         {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>

    </div>

</div>